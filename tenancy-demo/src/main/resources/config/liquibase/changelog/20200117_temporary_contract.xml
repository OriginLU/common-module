<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <property name="now" value="sysdate" dbms="oracle"/>
    <property name="now" value="now()" dbms="mysql"/>
    <property name="now" value="now()" dbms="postgresql"/>

    <changeSet author="Dipin" id="20200117-1">
        <createTable tableName="allin_sign_contract">

            <column autoIncrement="true" name="id" remarks="主键" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="contract_code" remarks="合同编号" type="VARCHAR(128)"/>
            <column name="id_card" remarks="用户身份证id" type="VARCHAR(64)"/>
            <column name="status" remarks="合同签约状态（'已签约','未签约'）" type="VARCHAR(32)"/>
            <column name="check_url" remarks="合同查看url" type="VARCHAR(512)"/>
            <column name="download_url" remarks="合同下载url" type="VARCHAR(512)"/>
        </createTable>
        <createIndex tableName="allin_sign_contract" indexName="contractCode_index">
            <column name="contract_code"/>
        </createIndex>
        <createIndex tableName="allin_sign_contract" indexName="idCard_index">
            <column name="id_card"/>
        </createIndex>
    </changeSet>

    <changeSet author="Dipin" id="20200120-1">
        <addColumn tableName="allin_sign_contract">
            <column name="create_time" remarks="创建时间" type="datetime"/>
        </addColumn>
        <addColumn tableName="allin_sign_contract">
            <column name="update_time" remarks="更新时间" type="datetime"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>
