<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet author="chlu" id="1566197191000-1">
        <preConditions>
            <not>
                <tableExists tableName="huaxia_day_switch" />
            </not>
        </preConditions>
        <createTable tableName="huaxia_day_switch" >
            <column autoIncrement="true" name="id" remarks="主键" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="merchant_id" type="varchar(50)"  remarks="商户号"/>
            <column name="switch_date" type="varchar(8)"  remarks="日切时间"/>
            <column name="status" type="tinyint"  remarks="日切状态 0-成功 1-失败"/>
        </createTable>
    </changeSet>

    <changeSet author="chlu" id="1566198684000-2">
        <addNotNullConstraint tableName="huaxia_day_switch" columnName="merchant_id" columnDataType="varchar(50)"/>
    </changeSet>

    <changeSet author="chlu" id="1566198684001-3">
        <addColumn tableName="huaxia_day_switch">
            <column name="create_time" type="datetime" remarks="创建时间" />
        </addColumn>
    </changeSet>
</databaseChangeLog>
